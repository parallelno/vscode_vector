{
  "name": "vscode-vector",
  "displayName": "Vector 06c Asm + Debugger",
  "description": "VS Code extension: assemble i8080 asm and run a simple debug session.",
  "version": "0.1.10",
  "publisher": "AlexFedotovskikh",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/parallelno/vscode_vector"
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "prepublish": "npm run compile",
    "run-rom-ts": "npm run compile && node ./out/tools/runRom.js",
    "run-frames": "npm run compile && node ./out/tools/run_frames.js",
    "test-directives": "npm run compile && node ./out/tools/run_directive_tests.js"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.70.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "pngjs": "^7.0.0",
    "vscode-debugadapter": "^1.47.0"
  },
  "activationEvents": [
    "onCommand:i8080.compile",
    "onLanguage:asm",
    "onCommand:i8080.run",
    "onCommand:i8080.pause",
    "onCommand:i8080.resume",
    "onCommand:i8080.stepFrame",
    "onCommand:i8080.compileProject",
    "onCommand:i8080.createProject",
    "onDebug"
  ],
  "contributes": {
    "languages": [
      {
        "id": "asm",
        "extensions": [".asm"],
        "aliases": ["ASM", "asm"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "asm",
        "scopeName": "source.retroasm_8080",
        "path": "./syntaxes/devector_8080.tmLanguage.json"
      }
    ],
    "breakpoints": [
      {
        "language": "asm"
      }
    ],
    "commands": [
      {
        "command": "i8080.compile",
        "title": "Compile i8080 Assembly"
      },
      {
        "command": "i8080.run",
        "title": "Run i8080 Emulator"
      },
      {
        "command": "i8080.pause",
        "title": "Pause i8080 Emulator"
      },
      {
        "command": "i8080.resume",
        "title": "Resume i8080 Emulator"
      },
      {
        "command": "i8080.stepFrame",
        "title": "Run one frame and Pause"
      }
      ,
      {
        "command": "i8080.toggleBreakpoint",
        "title": "Toggle Breakpoint"
      },
      {
        "command": "i8080.createProject",
        "title": "Create i8080 Project"
      },
      {
        "command": "i8080.compileProject",
        "title": "Compile i8080 Project"
      }
    ],
    "keybindings": [
      {
        "key": "f9",
        "command": "i8080.toggleBreakpoint",
        "when": "editorTextFocus && !editorReadonly && editorLangId == asm"
      }
    ],
    "debuggers": [
      {
        "type": "i8080",
        "label": "Intel 8080 Debugger",
        "program": "./out/debugAdapter.js",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to .asm (source) or .bin (binary) to run"
              }
            }
          }
        },
        "languages": [
          "asm"
        ]
      }
    ]
    ,
    "menus": {
      "editor/context": [
        {
          "command": "i8080.toggleBreakpoint",
          "group": "navigation",
          "when": "editorLangId == asm"
        }
      ]
    }
  }
}
