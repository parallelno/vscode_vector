{
  "name": "vscode-vector",
  "displayName": "Vector 06c Asm + Debugger",
  "description": "VS Code extension: assemble i8080 asm and run a simple debug session.",
  "version": "0.1.10",
  "publisher": "AlexFedotovskikh",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/parallelno/vscode_vector"
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "prepublish": "npm run compile",
    "run-rom-ts": "npm run compile && node ./out/tools/runRom.js"
  },
  "devDependencies": {
    "typescript": "^4.9.5",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.70.0"
  },
  "dependencies": {
    "vscode-debugadapter": "^1.47.0"
  },
  "activationEvents": [
    "onCommand:i8080.compile",
    "onCommand:i8080.run",
    "onCommand:i8080.pause",
    "onCommand:i8080.resume",
    "onCommand:i8080.runFrame",
    "onDebug"
  ],
  "contributes": {
    "commands": [
      {
        "command": "i8080.compile",
        "title": "Compile i8080 Assembly"
      }
      ,
      {
        "command": "i8080.run",
        "title": "Run i8080 Emulator"
      }
      ,
      {
        "command": "i8080.pause",
        "title": "Pause i8080 Emulator"
      }
      ,
      {
        "command": "i8080.resume",
        "title": "Resume i8080 Emulator"
      }
      ,
      {
        "command": "i8080.runFrame",
        "title": "Run one frame and Pause"
      }
    ],
    "debuggers": [
      {
        "type": "i8080",
        "label": "Intel 8080 Debugger",
        "program": "./out/debugAdapter.js",
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to .asm (source) or .bin (binary) to run"
              }
            }
          }
        },
        "languages": ["asm"]
      }
    ]
  }
}
